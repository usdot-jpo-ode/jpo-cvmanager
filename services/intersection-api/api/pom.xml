		</dependency>
		<dependency>
			<groupId>usdot.jpo.ode</groupId>
			<artifactId>jpo-geojsonconverter</artifactId>
			<version>1.4.2</version>
			<!-- Allow using newer streams version than geojsonconverter -->
			<exclusions>
				<exclusion>
