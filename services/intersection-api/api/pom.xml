	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.1.3</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>usdot.jpo.ode</groupId>
	<artifactId>intersection-api</artifactId>
	<version>1.6.0</version>
	<packaging>jar</packaging>
	<name>intersection-api</name>
	<description>CV Manager Intersection API for CIMMS conflict visualization</description>
	<properties>
		<java.version>21</java.version>
        <jacoco.version>0.8.12</jacoco.version>
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.coverage.jacoco.xmlReportPaths>${project.basedir}/target/site/jacoco/jacoco.xml</sonar.coverage.jacoco.xmlReportPaths>
        <sonar.language>java</sonar.language>
		<!-- Allow override of github organization when publishing artifacts to github -->
    	<github_organization>usdot-jpo-ode</github_organization>
        <geotools.version>19-SNAPSHOT</geotools.version>
	</properties>
